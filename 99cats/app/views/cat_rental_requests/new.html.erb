<h1>Request a Cat!!!!!!!!!</h1>

<%= link_to "<<Back", cats_url %>
<%= render "shared/errors" %>

<br><br>

<form action="<%= cat_rental_requests_url %>" method="post">
  <label for="cat">Cat: </label>
  <select name="cat_rental_request[cat_id]">
    <option value="cat" disabled="true" selected="true">Choose a cat!!!</option>

    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>">
          <%= cat.name %>
      </option>
    <% end %>

  </select>

  <label for="start_date">Start Date: </label>
  <input type="date" name="cat_rental_request[start_date]">

  <label for="end_date">End Date: </label>
  <input type="date" name="cat_rental_request[end_date]">

  <input type="submit" value="Submit">
</form>
